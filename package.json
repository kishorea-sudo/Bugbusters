{
  "name": "nexaflow-monorepo",
  "version": "1.0.0",
  "description": "NexaFlow Complete Project Management Platform - Frontend & Backend",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd frontend && npm run preview",
    "setup": "npm run setup:backend && npm run setup:frontend",
    "setup:frontend": "cd frontend && npm install && cp .env.example .env.local",
    "setup:backend": "echo 'Run backend/supabase-schema.sql in your Supabase SQL Editor'",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "lint": "cd frontend && npm run lint",
    "clean": "rm -rf frontend/node_modules frontend/dist backend/node_modules",
    "health-check": "cd frontend && npm run health-check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kishorea-sudo/nexaflow.git"
  },
  "keywords": [
    "project-management",
    "react",
    "typescript", 
    "supabase",
    "postgresql",
    "full-stack",
    "monorepo"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {},
  "dependencies": {}
}